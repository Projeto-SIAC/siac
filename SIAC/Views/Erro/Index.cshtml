@model ErroIndexViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html class="no-js" lang="pt-br" xmlns="http://www.w3.org/1999/xhtml" xmlns:og="http://ogp.me/ns#">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Erro @Model.Codigo - SIAC</title>
    <link href="~/resources/images/layout/logo-black.png" rel="shortcut icon" />
    @Styles.Render("~/bundles/css/acesso")
    <style type="text/css">
        body {
            background-color: #DADADA;
        }

            body > .grid {
                height: 100%;
            }

        .column {
            max-width: 450px;
        }
    </style>
</head>
<body>
    <div class="ui middle aligned center aligned grid">
        <div class="column">
            <h2 class="ui header left aligned">
                SIAC
                <div class="sub header">
                    Erro @Model.Codigo - @Model.Titulo
                </div>
            </h2>
            <div class="ui message">
                <p>@Model.Mensagem</p>
            </div>
            <a href="/">Voltar para Início</a>            
        </div>
    </div>
    @Scripts.Render("~/bundles/js/essentials")
</body>
</html>