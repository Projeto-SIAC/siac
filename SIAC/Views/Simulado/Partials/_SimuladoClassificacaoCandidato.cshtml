@model SimCandidato

<i class="close icon"></i>
<div class="header">
    @Model.Candidato.Nome
</div>
<div class="content">
    <table class="ui striped table">
        <thead>
            <tr>
                <th>Dia</th>
                <th>Prova</th>
                <th>Qte. Acertos</th>
                <th>Escore Padronizado</th>
            </tr>
        </thead>
        <tbody>
            @foreach (SimCandidatoProva prova in Model.SimCandidatoProva.OrderBy(c => c.CodDiaRealizacao).ThenBy(c => c.CodProva))
            {
                <tr>
                    <td>@(prova.CodDiaRealizacao)º</td>
                    <td>@prova.SimProva.Titulo</td>
                    <td>@($"{prova.QteAcertos}/{prova.SimProva.QteQuestoes}")</td>
                    <td><b>@prova.EscorePadronizadoString</b></td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <th colspan="3"><b>Classificação</b></th>
                <th><b>@Model.ClassificacaoPosicao</b></th>
            </tr>
            <tr>
                <th colspan="3"><b>Escore Padronizado Final</b></th>
                <th><b>@Model.EscorePadronizadoFinalString</b></th>
            </tr>
        </tfoot>
    </table>
</div>
<div class="actions">
    <div class="ui voltar button">Voltar</div>
    <div class="ui cancel button">Fechar</div>
</div>