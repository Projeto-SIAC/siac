@model GerenciaEditarBlocoViewModel

<i class="icon close"></i>
<div class="header">
    Editar Bloco "@Model.Bloco.Descricao"
</div>
<div class="content">
    <div class="ui form">
        <div class="field required">
            <label data-ajuda="">Selecione o Campus</label>
            <select name="ddlCampus" class="ui fluid search dropdown" required">
                <option value="">Campus</option>
                @foreach (var c in Model.Campi)
                {
                    <option value="@c.CodComposto" @(Model.Bloco.Campus.CodComposto == c.CodComposto ? "selected" : "") >@c.PessoaJuridica.NomeFantasia</option>
                }
            </select>
        </div>
        <div class="field required">
            <label data-ajuda="">Digite a descrição</label>
            <input type="text" name="txtDescricao" placeholder="Descrição" maxlength="50" value="@Model.Bloco.Descricao" required />
        </div>
        <div class="field required">
            <label data-ajuda="">Insira a sigla</label>
            <input type="text" name="txtSigla" placeholder="Sigla" maxlength="15" value="@Model.Bloco.Sigla" required />
        </div>
        <div class="field">
            <label data-ajuda="">Escreva uma referência da localização</label>
            <input type="text" name="txtRefLocal" placeholder="Referência da Localização" maxlength="255" value="@Model.Bloco.RefLocal" />
        </div>
        <div class="field">
            <label data-ajuda="">Se necessário, registre uma observação</label>
            <input type="text" name="txtObservacao" placeholder="Observação" maxlength="140" value="@Model.Bloco.Observacao" />
        </div>
    </div>
</div>
<div class="actions">
    <input type="reset" value="Cancelar" class="ui cancel button" />
    <button type="submit" class="ui button">Salvar</button>
</div>

