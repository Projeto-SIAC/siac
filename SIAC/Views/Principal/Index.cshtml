@{
    ViewBag.Title = "Principal";
}

<h2>@ViewBag.Title</h2>

<div class="ui info message @((Sessao.AjudaEstado)?"":"hidden")" data-ajuda-mensagem>
    <div class="header">
        Seja bem vindo ao SIAC!
    </div>
    <ul class="list">
        <li>Os ícones abaixo compõe o menu principal do sistema.</li>
        <li>Caso exista algum, os ícones em vermelho servem como contadores para cada operação pendente.</li>
    </ul>
</div>

<div class="ui stackable grid dashmenu">
    <div class="stackable doubling four columns centered row">
        @Html.Partial("_Atalho", new AtalhoViewModel("Realizar Autoavaliação", "file outline", Url.Action("Realizar", "Autoavaliacao"), "Ir para Realizar Autoavaliação", "autoavaliacao"))
        @if (Sessao.UsuarioCategoriaCodigo == Categoria.PROFESSOR)
        {
            @Html.Partial("_Atalho", new AtalhoViewModel("Gerar Avaliação Acadêmica", "file", Url.Action("Gerar", "Academica"), "Ir para Gerar Avaliação Acadêmica"))
            @Html.Partial("_Atalho", new AtalhoViewModel("Gerar Avaliação de Certificação", "file text", Url.Action("Gerar", "Certificacao"), "Ir para Gerar Avaliação de Certificação"))
            @Html.Partial("_Atalho", new AtalhoViewModel("Cadastrar Questão", "add circle", Url.Action("Cadastrar", "Questao"), "Ir para Cadastrar Questão"))
            @Html.Partial("_Atalho", new AtalhoViewModel("Correções Pendentes", "edit", Url.Action("Pendente"), "Ir para Correções Pendentes", "correcao"))
        }
        @if (Sessao.UsuarioCategoriaCodigo <= Categoria.COLABORADOR)
        {
            @Html.Partial("_Atalho", new AtalhoViewModel("Visualizar Agendamentos", "calendar", Url.Action("Index", "Agenda"), "Ir para Agenda"))
            @Html.Partial("_Atalho", new AtalhoViewModel("Visualizar Meu Perfil", "user", Url.Action("Index", "Perfil"), "Ir para Perfil"))
        }
        @Html.Partial("_Atalho", new AtalhoViewModel("Histórico das Atividades", "wait", Url.Action("Index", "Historico"), "Ir para Histórico"))
    </div>
</div>