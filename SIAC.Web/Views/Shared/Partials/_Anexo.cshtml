@model QuestaoAnexo
@switch (Model.CodTipoAnexo)
{
    case TipoAnexo.IMAGEM:
        @Html.Partial("_AnexoImagem", Model)
        break;
    case TipoAnexo.CODIGO:
        @Html.Partial("_AnexoCodigo", Model)
        break;
    case TipoAnexo.TEXTO:
        @Html.Partial("_AnexoTexto", Model)
        break;
    default:
        break;
}