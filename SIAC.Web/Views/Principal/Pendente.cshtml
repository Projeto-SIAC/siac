@model List<Avaliacao>
@{
    ViewBag.Title = "Correções Pendentes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>
<div class="ui basic segment">
    <div class="ui two stackable cards">
        @foreach (Avaliacao aval in Model)
        {
            switch (aval.CodTipoAvaliacao)
            {
                case 2:
                    <a href="@Url.Action("Corrigir", "Academica", new { codigo = aval.CodAvaliacao })" class="card blue">
                        <div class="content">
                            <div class="header">Código: @aval.CodAvaliacao</div>
                            <div class="meta">
                                <span title="@aval.DtAplicacao.Value.ToBrazilianString()">@aval.DtAplicacao.Value.ToElapsedTimeString()</span>
                            </div>
                            <div class="description">
                                <p><b>Disciplina</b>: @aval.AvalAcademica.Disciplina.Descricao</p>                                
                                <p><b>Turma</b>: @aval.AvalAcademica.Turma.Curso.Descricao (@aval.AvalAcademica.Turma.CodTurma)</p>
                                <p><b>Quantidade de Questões</b>: @aval.QteQuestoes()</p>
                            </div>
                        </div>
                        <span class="ui attached top right label"><i class="file icon"></i>@aval.TipoAvaliacao.DescricaoCurta</span>
                    </a>
                    break;
                case 3:
                    <a href="@Url.Action("Corrigir", "Certificacao", new { codigo = aval.CodAvaliacao })" class="card teal">
                        <div class="content">
                            <div class="header">Código: @aval.CodAvaliacao</div>
                            <div class="meta">
                                <span title="@aval.DtAplicacao.Value.ToBrazilianString()">@aval.DtAplicacao.Value.ToElapsedTimeString()</span>
                            </div>
                            <div class="description">
                                <p><b>Disciplina</b>: @aval.AvalCertificacao.Disciplina.Descricao</p>
                                <p><b>Quantidade de Questões</b>: @aval.QteQuestoes()</p>
                            </div>
                        </div>
                        <span class="ui attached top right label"><i class="file text icon"></i>@aval.TipoAvaliacao.DescricaoCurta</span>
                    </a>
                    break;
                case 5:
                    <a href="@Url.Action("Corrigir", "Reposicao", new { codigo = aval.CodAvaliacao })" class="card orange">
                        <div class="content">
                            <div class="header">Código: @aval.CodAvaliacao</div>
                            <div class="meta">
                                <span title="@aval.DtAplicacao.Value.ToBrazilianString()">@aval.DtAplicacao.Value.ToElapsedTimeString()</span>
                            </div>
                            <div class="description">
                                <p><b>Disciplina</b>: @aval.AvalAcadReposicao.Disciplina.Descricao</p>
                                <p><b>Quantidade de Alunos</b>: @aval.AvalAcadReposicao.Alunos.Count</p>
                                <p><b>Quantidade de Questões</b>: @aval.QteQuestoes()</p>
                            </div>
                        </div>
                        <span class="ui attached top right label"><i class="file archive outline icon"></i>@aval.TipoAvaliacao.DescricaoCurta</span>
                    </a>
                    break;
                default:
                    break;
            }

        }
    </div>
</div>

