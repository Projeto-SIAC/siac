
@{
    ViewBag.Title = "Agenda";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles {
    @Styles.Render("~/bundles/fullcalendar/css")    
}

@section Scripts{
    @Scripts.Render("~/bundles/fullcalendar/js")    
    <script>
        $(function () {
            $('#calendar').fullCalendar({
                header: {
                        left:   'title',
                        center: '',
                        right:  'today agendaDay,agendaWeek,month prev,next'
                },
                lang: 'pt-br',
                eventSources: [
                    {
                        url: '/dashboard/agenda/certificacoes',
                        type: 'POST',
                        color: '#009688'
                    },
                    {
                        url: '/dashboard/agenda/academicas',
                        type: 'POST',
                        color: '#2196F3'
                    },
                    {
                        url: '/dashboard/agenda/reposicoes',
                        type: 'POST',
                        color: '#EF5350'
                    },
                    {
                        url: '/dashboard/agenda/horarios',
                        type: 'POST',
                        color: '#4CAF50',
                        cache: true,
                        rendering: 'background'
                    }
                ]
            });

        });
    </script>
}

<h2>@ViewBag.Title</h2>

<div id="calendar"></div>
