                            <div class="content">

                                <table class="ui striped table">
                                    <thead>
                                        <tr>
                                            <th>Disciplina</th>
                                            <th>Carga Horária CH</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (MatrizCurricularDisciplina matdisc in matriz.MatrizCurricularDisciplina)
                                        {
                                            <tr>
                                                <td>@matdisc.Disciplina.Descricao</td>
                                                <td>@matdisc.DiscCargaHoraria</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    }
                </div>
            </div>

