
@{
    ViewBag.Title = "Cadastrar";
}

<h2>@ViewBag.Title</h2>

<form method="post" class="ui form">
    <div class="field">
        <div class="ui dividing header">Informações Pessoais</div>
        <div class="fields">
            <div class="twelve wide field required">
                <label>Nome</label>
                <input type="text" placeholder="Nome" required />
            </div>
            <div class="four wide field required">
                <label>CPF</label>
                <input type="text" data-mask="000.000.000-00" placeholder="CPF" required />
            </div>
        </div>
        <div class="two fields">
            <div class="field">
                <label>Data de Nascimento</label>
                <input type="date" data-mask="0000-00-00" />
            </div>
            <div class="field">
                <label>Sexo</label>
                <select class="ui dropdown">
                    <option value="">Sexo</option>
                    <option value="F">Feminino</option>
                    <option value="M">Masculino</option>
                    <option value="N">Outro</option>
                </select>
            </div>
        </div>
    </div>
    <div class="field">
        <div class="ui dividing header">Informações de Acesso</div>
        <div class="field">
            <label>Data de Validade</label>
            <div class="two fields">
                <div class="field">
                    <div class="ui basic segment">
                        <div class="ui toggle checkbox">
                            <input type="checkbox" name="chkValidade">
                            <label>Possui data de validade</label>
                        </div>
                    </div>
                </div>
                <div class="field">
                    <input type="date" name="txtValidade" data-mask="0000-00-00" placeholder="Data de Validade" disabled />
                </div>
            </div>
        </div>
    </div>
    <div class="field">
        <div class="ui button" tabindex="0">Cancelar</div>
        <div class="ui button" tabindex="0">Continuar</div>
    </div>
</form>
