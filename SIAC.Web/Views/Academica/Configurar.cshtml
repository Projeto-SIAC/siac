@using SIAC.Web.Models
@model AvalAcademica
@{
    ViewBag.Title = "Configurar " + Model.Avaliacao.CodAvaliacao;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Scripts{
    <script>
        $('.ui.informacoes.modal').modal();
        $('div').popup();
        $('.cancelar.button').popup({ on: 'click' });
        $('.right.floated.button').popup({ on: 'click' });
        $('.ui.accordion').accordion();

        function obterNovaQuestao(codQuestao, indice, codTipoQuestao) {
            var card = $('#CardQuestao' + indice);
            console.log("inicio");
            card.addClass('ui form loading');
            $.ajax({
                type: "POST",
                url: '@Url.RouteUrl("AvalAcadTrocarQuestao")',
                data: {
                    codigoAvaliacao: '@Model.Avaliacao.CodAvaliacao',
                    tipo: codTipoQuestao,
                    indice: indice,
                    codQuestao: codQuestao
                },
                success: function (data) {
                    if (data) {
                        card.html(data);
                        $('.ui.accordion').accordion();
                        $('.right.floated.button').popup({ on: 'click' });
                        $('.ui.button.disabled').removeClass('disabled');
                    }
                    card.removeClass('ui form loading');
                },
                error: function () {
                    card.removeClass('ui form loading');
                    Mensagem('Ocorreu um erro não esperado.');
                }
            });
        }

        function salvar()
        {
            $('.button.salvar').addClass('loading');
            $('form').submit();
            @*$.ajax({
                url: '@Url.RouteUrl("SalvarAvalAcad")',
                type: 'POST',
                data: {codigoAval:'@Model.Avaliacao.CodAvaliacao'},
                success: function (data) {
                    $('.button.salvar').removeClass('loading');
                    $('.button.salvar').addClass('disabled');
                    Mensagem("Avaliação Configurada com sucesso!", "Aviso");
                },
                error: function(data){
                    alert('error');
                }
            });*@
        }
    </script>
    }

<h2>
    @ViewBag.Title 
    <div class="ui right floated button" onclick="$('.ui.informacoes.modal').modal('show')">Informações</div>
    <a onclick="window.open('/Historico/Avaliacao/Academica/Imprimir/@Model.Avaliacao.CodAvaliacao', '_blank');" class="ui right floated button">Visualizar impressão</a>
</h2>

<div class="ui informacoes modal">
    <i class="icon close"></i>
    <div class="header">Informações sobre a avaliação</div>
    <div class="content">
        <table class="ui striped table">
            <thead>
                <tr>
                    <th>Disciplina</th>
                    <th>Tema(s)</th>
                    <th>Quantidade</th>
                    <th>Dificuldade</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        @* Disciplina *@
                        <b>@Model.Disciplina.Descricao</b>
                    </td>
                    <td class="ui labels">
                        @* Temas *@
                        @foreach (var avalTema in Model.Avaliacao.AvaliacaoTema)
                        {
                            <div class="ui tag label">@avalTema.Tema.Descricao</div>
                        }
                    </td>
                    <td class="ui labels">
                        @* Qte de Questões *@
                        <div class="ui label">Objetiva<div class="detail">@Model.Avaliacao.AvaliacaoTema.ToList().QteQuestoesPorTipo(Model.CodDisciplina, 1)</div></div>
                        <div class="ui label">Discursiva<div class="detail">@Model.Avaliacao.AvaliacaoTema.ToList().QteQuestoesPorTipo(Model.CodDisciplina, 2)</div></div>
                    </td>
                    <td>
                        @* Dificuldade *@
                        @Model.Avaliacao.AvaliacaoTema.ToList().MaxDificuldade(Model.CodDisciplina)
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

<div class="ui basic segment">
    <h3 class="ui dividing header">Questões</h3>
    <div class="ui one cards" style="max-height: 25em; overflow-y: auto">
        @{ 
            //int contador = 0;
            for (int i = 0; i < Model.Avaliacao.Questao.Count; i++)
            {                
                <div id="CardQuestao@(i)" class="card">
                    @Html.Partial("_Questao", Model.Avaliacao.Questao[i], new ViewDataDictionary { { "Index", i } })
                </div>
            //contador++;
            }
        }
    </div>
</div>
<form method="post" action="@(Url.RouteUrl("SalvarAvalAcad"))/@Model.Avaliacao.CodAvaliacao">
    <div data-html="<div class='header'>Tem certeza?</div><div class='content'><p>Você perderá todos os dados</p><a href='/Historico/Avaliacao/Academica/Detalhe/@Model.Avaliacao.CodAvaliacao' class='ui small button'>Sim, cancelar</a></div>" class="ui cancelar button">Cancelar</div>
    <div class="ui button disabled salvar" onclick="salvar()">Salvar</div>
</form>
